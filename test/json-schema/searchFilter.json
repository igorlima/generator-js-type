{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "type":"object",
  "properties":{
    "PageSize":{
      "type":"integer"
    },
    "PageNumber":{
      "type":"integer"
    },
    "SiteId":{
      "type":"integer"
    },
    "ConsumerKey":{
      "type":"string"
    },
    "Filters":{
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "PropertyName":{
            "type":"string"
          },
          "PropertyValue":{
            "type":"string"
          }
        }
      }
    },
    "SortingTemplate":{
      "type":"object",
      "properties":{
        "SortingFilters":{
          "type":"array",
          "items":{
            "type":"object",
            "properties":{
              "PropertyName":{
                "type":"string"
              },
              "Ascending":{
                "type":"boolean"
              }
            }
          }
        }
      }
    }
  }
}
